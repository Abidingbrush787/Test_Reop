<Window x:Class="TPW_Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <TextBox x:Name="NumberOfBallsTextBox" Width="100" Margin="0,0,0,0"/>
            <Button Content="Generuj kule" Click="GenerateBalls_Click"/>
            <Button Content="Rozpocznij ruch" Click="StartMovingBalls_Click" Margin="5"/>

        </StackPanel>

        <Canvas x:Name="MainCanvas" Grid.Row="1" Background="Black" ClipToBounds="True"/>

    </Grid>
</Window>